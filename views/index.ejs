<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Foxsh - video conferencing</title>
  <link rel="stylesheet" href="header-style.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</style>
</head>
<body>
    <section id="header">
        <div class="header container">
            <div class="nav-bar">
                <div class="nav-list">
                    <div class="brand"></div>
                    <div class="hamburger"><div class="bar"></div></div>
                    <ul>
                        <li><a href="#" data-after="home">home</a></li>
                        <li><a href="aboutus.html" data-after="About Us">About Us</a></li>
                        <li><a href="feedback.html" data-after="Feedback">Feedback</a></li>
                        <li><a href="http://localhost:3030/temp" data-after="Login / Signup">Login / signup</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <script>
            const hamburger=document.querySelector('.header .nav-bar .nav-list .hamburger');
            const mobile_menu=document.querySelector('.header .nav-bar .nav-list ul');
            const header=document.querySelector('.header .container');

            hamburger.addEventListener('click',()=>{
                hamburger.classList.toggle('active');
                mobile_menu.classList.toggle('active');
            });   
       </script>

    </section>
    <section id="second">
        <div class="entercode left">
            <h1>Secure Video Conferencing For You</h1>
            <strong style="font-size: 22px; color:black">Join, collaborate and share Your Idea with The World.</strong>
            <div class="centered">
            </div><br><br>
         <button type="submit" id="submit" >Join Meeting</button>
         <br><h4>OR</h4>
         <button><a href="http://localhost:3030/temp" style="color:black" title="You need to login first in order to create a meeting">Create New Meeting </a></button>
        </div>
        <div class="entercode right" id="right_part" >
        <u><h2 style="text-shadow: 2px 1px aqua;"> WELCOME TO YOUR MEETINGS</h2></u><br><br>
        <marquee><h3 style="font-family:Georgia, 'Times New Roman', Times, serif; text-shadow: 1px 1px yellow;">!! Glad To See You here !!</h3></marquee>
        <video width="320" muted controls autoplay>
            <source src="img/video4.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>   
        </div>
    </section>
    <script>
        let join = document.getElementById('submit');

           join.addEventListener('click',()=>{
           let url = prompt('Enter Your meeting URL', "look like (https://foxsh-video-conferencing-app.herokuapp...)");
           url = url.trim();
           if(url == '')
           {
               alert('Please enter valid URL');
           }
           else
           {
               window.location = url;
           }
           });
           
    </script>
</body>
</html>
 
